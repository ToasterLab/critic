{
  "manifest_version": 2,

  "name": "Critic",
  "description": "Comment on anything, anywhere",
  "version": "1.0",

  "browser_action": {
    "default_icon": "img/icon.png",
    "default_title": "Critic Options"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "css": ["dist/styles/critic.css"]
    }
  ],
  "background":{
  	"scripts": ["dist/scripts/critic.js"]
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "https://ajax.googleapis.com/"
  ],
  "icons":{
  	"16": "img/icon-bitty.png",
  	"19": "img/icon-19.png",
  	"38": "img/icon-38.png",
  	"48": "img/icon-small.png",
  	"128": "img/icon-large.png",
  	"512": "img/icon.png"
  }
}